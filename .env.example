# Configurações da API
API_TITLE=MS AI RAG
API_DESCRIPTION=Microsserviço para processamento de PDFs e RAG com IA
API_VERSION=1.0.0
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Vector Store (opções: chromadb, pinecone, mongodb)
VECTOR_STORE_TYPE=chromadb

# ChromaDB (padrão)
CHROMADB_PERSIST_DIRECTORY=./chroma_data

# Pinecone (v3.0+ - descomente para usar)
# PINECONE_API_KEY=seu-api-key-aqui
# PINECONE_CLOUD=aws
# PINECONE_REGION=us-east-1

# MongoDB (descomente para usar)
# MONGODB_CONNECTION_STRING=mongodb://localhost:27017
# MONGODB_DATABASE_NAME=rag_system

# Embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2

# PDF Processing
PDF_CHUNK_SIZE=500
PDF_CHUNK_OVERLAP=50
MAX_PDF_SIZE_MB=50
